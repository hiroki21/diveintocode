<div class="page-header">
  <h1>お問い合わせ</h1>
  <p>以下の内容でよろしければ、送信をお願いいたします</p>
</div>
 
<%= form_for @inquiry, :url => inquiry_thanks_path do |f| %>
  <table class="table">
    <tr>
      <th>名前</th>
      <td>
        <%= f.hidden_field :name %>
        <%= @inquiry.name %>
      </td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td>
        <%= f.hidden_field :email %>
        <%= @inquiry.email %>
      </td>
    </tr>
    <tr>
      <th>お問い合わせ内容</th>
      <td>
        <%= f.hidden_field :massage %>
        <%= simple_format(@inquiry.massage) %>
      </td>
    </tr>
  </table>
  <%= f.submit '送信', :class => 'btn btn-primary' %>
<% end %>

<%= form_for @inquiry, :url => inquiry_path do |f| %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :email %>
  <%= f.hidden_field :massage %>
  <%= f.submit '戻る', name: 'back', :class => 'btn btn-primary2' %>
<% end %>