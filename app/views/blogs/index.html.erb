<p id="notice"><%= notice %></p>

<%= link_to 'Create Blog', new_blog_path %>

<%= will_paginate %>

<% @blogs.each do |blog| %>
<div class="panel panel-primary">
   
    <div class="panel-heading">
        <h3 class="panel-title"><%= blog.title %></h3>
    </div>

    <div class="panel-body">
       <% if blog.user.image.nil? %>
　　       <%= image_tag blog.user.image.thumb.url %>
　     <% else %>
　　       <%= profile_image(blog.user) %>
　     <% end %>
       
       </br>
       <%= blog.content %> </br>
       <em><%= blog.created_at %></em>
       <p><em>投稿者：<%= blog.user.name %></em></p>
       <% if current_user.id == blog.user_id %>
       <p><%= link_to "更新", edit_blog_path(blog.id) %></p>
       <p><%= link_to "削除", blog_path(blog.id), :method => :delete %></p>
       <% end %>
    </div>

</div>
   
<% end %>

<%= will_paginate %>