<%= form_for(@blog) do |f| %>

  <div class="form-group">
  <h2>タイトル</h2>
  <%= f.text_field :title %>
  </div>
  
  <div class="form-group">
  <h2>内容</h2>
  <%= f.text_field :content, class: 'blog_content', row: 10 %>
  </div>
  
  <%= f.hidden_field :user_id, value: current_user.id %>
  
  <%= f.submit %>

<% end %>